@page
@model HealthConnect.Pages.Admin.Medicine_list_management.Medicine_Finel_Category_manage.Medicine_Finel_CategoryModel
@{
    Layout = "_Admin_header";
    ViewData["Title"] = "Medicine Finel Category";
}

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Add medicine sub category</h4>
            <form method="post">
                <div class="col-md-12">
                    <div class="form-group row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label for="medicine_finel_category_name">Medicine Main Category</label>
                                <select class="form-control" id="mainCategoryDropdown" name="medicine_main_category_id">
                                    <option selected disabled>Select Main Category</option>
                                    @foreach (var item in Model.Medicine_Main_Category)
                                    {
                                        <option value="@item.medicine_main_category_id">@item.medicine_main_category_name</option>
                                    }
                                </select>
                            </div>

                            <div class="form-group">
                                <label for="medicine_finel_category_name">Medicine Sub Category</label>
                                <select class="form-control" id="subCategoryDropdown" name="medicine_sub_category_id">
                                    <option selected disabled>Select Sub Category</option>
                                    @foreach (var item in Model.Medicine_Sub_Category)
                                    {
                                        <option value="@item.medicine_sub_category_id">@item.medicine_sub_category_name</option>
                                    }
                                </select>
                            </div>

                           

                            <div class="form-group">
                                <label for="medicine_finel_category_name">Medicine finel category</label>
                                <input type="text" class="form-control" name="medicine_finel_category_name" id="medicine_finel_category_name" placeholder="Medicine finel category name">
                            </div>

                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <button type="button" class="btn btn-dark" onclick="history.back()">Cancel</button>
                </div>
            </form>

        </div>
    </div>
</div>


<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Medicine finel category</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th> Id </th>
                            <th> Medicine main category name </th>
                            <th> Medicine sub category name </th>
                            <th> Medicine finel category name </th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model.Medicine_Finel_Category)
                        {
                            <tr class="data">
                                <td> @item.medicine_finel_category_id </td>
                                <td> @item.Medicine_Main_Category.medicine_main_category_name </td>
                                <td> @item.Medicine_Sub_Category.medicine_sub_category_name </td>
                                <td> @item.medicine_finel_category_name </td>
                                <td>
                                    <a class="edit_icon" href="/Admin/Medicine_list_management/Medicine_Finel_Category_manage/Medicine_Finel_Category_Edit?medicine_finel_category_id=@item.medicine_finel_category_id"><i class="fa-regular fa-pen-to-square"></i></a>
                                </td>
                                <td>
                                    <form method="post" asp-page-handler="Delete">
                                        <input type="hidden" name="id" value="@item.medicine_finel_category_id" />
                                        <button class="btn btn-danger"><i class="fa-solid fa-trash-can"></i></button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



                                 