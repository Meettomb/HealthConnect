@page
@model Active_user_dataModel
@{
    Layout = "_Admin_header";
    ViewData["Title"] = "Active User";
}



<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Doctor Register inquiry</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th> Name </th>
                                <th> Email </th>
                                <th> Gender </th>
                                <th> Country </th>
                                <th> City </th>
                                <th> Account Date </th>
                                <th> Role </th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model.User_Table)
                            {
                                <tr class="data">
                                    <td class="if_account_block">
                                        @if (string.IsNullOrEmpty(item.profile_pic))
                                        {
                                            <span class="name_first_latter">
                                                @item.first_name[0].ToString().ToUpper()
                                            </span>
                                            @if (item.block == true)  
                                            {
                                                <i class="fa-solid fa-ban"></i> 
                                            }
                                        }
                                        else
                                        {
                                            <img src="/documant/@item.profile_pic" alt="image" />
                                            @if (item.block == true) 
                                            {
                                                <i class="fa-solid fa-ban"></i> 
                                            }
                                        }

                                        @if (item.role == "Doctor")
                                        {
                                            <span class="pl-2">Dr. @item.first_name @item.last_name</span>
                                        }
                                        else
                                        {
                                            <span class="pl-2">@item.first_name @item.last_name</span>
                                        }
                                    </td>
                                    <td> @item.email </td>
                                    <td> @item.gender </td>
                                    <td> @item.country </td>
                                    <td> @item.city </td>
                                    <td> @item.account_create_date </td>
                                    <td> @item.role </td>
                                    <td>

                                        <a class="edit_icon" href="/Admin/UserData/UserList/Edit_user?id=@item.id"><i class="fa-solid fa-user-pen"></i></a>
                                        <a class="info_icon" href="/Admin/UserData/UserList/User_detail?id=@item.id"><i class="fa-solid fa-circle-info"></i></a>

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

