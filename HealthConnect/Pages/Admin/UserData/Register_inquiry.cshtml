@page
@model HealthConnect.Pages.Admin.UserData.Register_inquiryModel
@{
    Layout = "~/Pages/Shared/_Admin_header.cshtml";
    ViewData["Title"] = "Doctor Register inquiry";
}

<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Doctor Register inquiry</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th> Request id </th>
                                <th> Doctor Name </th>
                                <th> Register No </th>
                                <th> Medical Council </th>
                                <th> Year of registration </th>
                                <th> Inquiry date </th>
                                <th> Status </th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model.Doctor_approvel)
                            {
                                <tr class="data">
                                    <td> @item.doctor_approvel_id </td>
                                    <td>
                                        <img src="/documant/@item.profile_pic" alt="image" />
                                        <span class="pl-2">Dr. @item.first_name @item.last_name</span>
                                    </td>
                                    <td> @item.medical_registration_no </td>
                                    <td> @item.state_medical_council </td>
                                    <td> @item.year_of_registration </td>
                                    <td> @item.account_create_date </td>
                                    <td>
                                        <a class="badge badge-outline-warning" href="/Admin/UserData/Register_inquiry_approve?doctor_approvel_id=@item.doctor_approvel_id">Panding</a>

                                    </td>
                                </tr>
                            }                        
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
