@page
@model Doctor_specialtiesModel
@{
    Layout = "_Admin_header";
    ViewData["Title"] = "Doctor Specialitis list";
}




<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Add doctor specialitis of doctor</h4>
            <form method="post" asp-page-handler="RoleUpdate">
                <div class="col-md-12">
                    <div class="form-group row">
                        <div class="col-sm-12">

                            <div class="form-group">
                                <select class="form-control" name="doctor_type_id">
                                    <option selected disabled>Select Doctor Type</option>
                                    @foreach (var item in Model.Types_of_doctor)
                                    {
                                        <option value="@item.doctor_type_id">@item.type_of_doctor</option>
                                    }
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="doctor_specialitis">Specialitis of doctor</label>
                                <input type="text" class="form-control" name="doctor_specialitis" id="doctor_specialitis" placeholder="Specialitis of doctor">
                            </div>

                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <button type="button" class="btn btn-dark" onclick="history.back()">Cancel</button>
                </div>
            </form>

        </div>
    </div>
</div>





<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Add doctor types</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th> Id </th>
                            <th> Doctor Type Id </th>
                            <th> Type of Doctor </th>
                            <th> Specialitis of Doctor </th>

                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model.doctorSpecialitiesList)
                        {
                            <tr class="data">
                                <td> @item.doctor_specialitis_id </td>
                                <td> @item.doctor_type_id </td>
                                <td> @item.Types_of_Doctor.type_of_doctor </td>
                                <td> @item.doctor_specialitis </td>
                                <td>
                                    <a class="edit_icon" href="/Admin/Doctor_list_management/Doctor_specialties_manage/Doctor_specialties_edit?doctor_specialitis_id=@item.doctor_specialitis_id"><i class="fa-regular fa-pen-to-square"></i></a>

                                </td>
                                <td>
                                    <form method="post" asp-page-handler="Delete">
                                        <input type="hidden" name="id" value="@item.doctor_specialitis_id" />
                                        <button class="btn btn-danger"><i class="fa-solid fa-trash-can"></i></button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


