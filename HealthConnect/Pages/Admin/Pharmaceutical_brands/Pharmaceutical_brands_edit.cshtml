@page
@model HealthConnect.Pages.Admin.Pharmaceutical_brands.Pharmaceutical_brands_editModel
@{
    Layout = "_Admin_header";
    ViewData["Title"] = "Pharmaceutical Brands";
}


<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Add pharmaceutical brands</h4>
            <form method="post" enctype="multipart/form-data">
                <input type="hidden" name="pharmaceutical_brands_id" value="@Model.PharmaceuticalBrands.pharmaceutical_brands_id" />
                <div class="col-md-12">
                    <div class="form-group row">
                        <div class="col-sm-12">

                            <div class="form-group">
                                <label for="pharmaceutical_brands_name">Pharmaceutical brands image</label>
                                <input type="file" class="form-control" name="pharmaceutical_brands_image" id="pharmaceutical_brands_image" />
                            </div>

                            <div class="form-group">
                                <label for="pharmaceutical_brands_name">Pharmaceutical brands name</label>
                                <input type="text" class="form-control" name="pharmaceutical_brands_name" id="pharmaceutical_brands_name" value="@Model.PharmaceuticalBrands.pharmaceutical_brands_name" placeholder="pharmaceutical brands name" />
                            </div>

                        </div>
                    </div>
                    <button type="submit" value="Add" name="action" class="btn btn-primary mr-2">Submit</button>
                </div>
            </form>

        </div>
    </div>
</div>
