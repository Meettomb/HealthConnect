@page
@model HealthConnect.Pages.Admin.Pharmaceutical_brands.Pharmaceutical_brandsModel
@{
    Layout = "_Admin_header";
    ViewData["Title"] = "Pharmaceutical Brands";
}


<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Add pharmaceutical brands</h4>
            <form method="post" enctype="multipart/form-data">
                <div class="col-md-12">
                    <div class="form-group row">
                        <div class="col-sm-12">

                            <div class="form-group">
                                <label for="pharmaceutical_brands_name">Pharmaceutical brands image</label>
                                <input type="file" class="form-control" name="pharmaceutical_brands_image" id="pharmaceutical_brands_image"/>
                            </div>
                            
                            <div class="form-group">
                                <label for="pharmaceutical_brands_name">Pharmaceutical brands name</label>
                                <input type="text" class="form-control" name="pharmaceutical_brands_name" id="pharmaceutical_brands_name" placeholder="pharmaceutical brands name"/>
                            </div>

                        </div>
                    </div>
                    <button type="submit" value="Add" name="action" class="btn btn-primary mr-2">Submit</button>
                </div>
            </form>

        </div>
    </div>
</div>





<div class="col-md-8 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Pharmaceutical Brands</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th> id </th>
                            <th> Pharmaceutical Brands Image </th>
                            <th> Pharmaceutical Brands Name </th>

                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model.Pharmaceutical_Brands)
                        {
                            <tr class="data">
                                <td> @item.pharmaceutical_brands_id </td>
                                <td><img src="/PharmaceuticalBrandsImage/@item.pharmaceutical_brands_image" alt="@item.pharmaceutical_brands_name" /></td>
                                <td> @item.pharmaceutical_brands_name </td>
                                <td>
                                    <a class="edit_icon" href="/Admin/Pharmaceutical_brands/Pharmaceutical_brands_edit?pharmaceutical_brands_id=@item.pharmaceutical_brands_id"><i class="fa-regular fa-pen-to-square"></i></a>

                                </td>
                                <td>
                                    <form method="post" asp-page-handler="Delete">
                                        <input type="hidden" name="pharmaceutical_brands_id" value="@item.pharmaceutical_brands_id" />
                                        <button class="btn btn-danger"><i class="fa-solid fa-trash-can"></i></button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



